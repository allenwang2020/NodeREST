{
	  "AWSEBDockerrunVersion": 2,
	  "volumes": [
	    {
	      "name": "nginx-proxy-conf",
	      "host": {
	      "sourcePath": "/var/app/current/nginx"
	      }
	    },           
	    {
	      "name": "web-node",
	      "host": {
	        "sourcePath": "/var/app/current/web"
	      }
	    },
	    {
	      "name": "mongo",
	      "host": {
	        "sourcePath": "/var/app/current/mongo"
	      }
		},
	    {
	      "name": "mongodb-data",
	      "host": {
	        "sourcePath": "/var/db/mongo/products-demo"
	      }
	    }
	  ],
	  "containerDefinitions": [
		{
		  "name": "nginx-proxy",
		  "image": "nginx",
		  "essential": true,
		  "memory": 128,
		  "portMappings": [
		    {
		      "hostPort": 80,
		      "containerPort": 80
		    }
		  ],
		  "links": [
		    "web-node"
		  ],
		  "mountPoints": [
		    {
		      "sourceVolume": "nginx-proxy-conf",
		      "containerPath": "/etc/nginx",
		      "readOnly": true
		    }
		  ]
		}
	  ]
}