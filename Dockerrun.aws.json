{
	  "AWSEBDockerrunVersion": 2,
	  "volumes": [
	    {
	      "name": "node-web",
	      "host": {
	        "sourcePath": "/var/app/current"
	      }
	    },
	    {
	    
	      "name": "mongodb-data",
	      "host": {
	        "sourcePath": "/var/app/current/mongodb-data"
	      }
	    }
	  ],
	  "containerDefinitions": [
	    {
	      "name": "node-web",
	      "image": "node:4.4.2",
	      "essential": true,
	      "memory": 128,
	      "portMappings": [
	        {
	          "hostPort": 80,
	          "containerPort": 8080
	        }
	      ],
	      "command": [
	        "/bin/bash",
	        "/usr/src/app/run_node.sh"
	      ],
	      "links": 
	        [
	         "mongodb"
	        ],
	      "mountPoints": [
	        {
	          "sourceVolume": "node-web",
	          "containerPath": "/usr/src/app"
	        }
	      ]
	    },
        {
            "name": "mongodb",
            "image": "mongo",
            "memory": 128,
            "essential": true,
            "portMappings": 
            [
                {
                    "hostPort": 27017,
                    "containerPort": 27017
                }
            ],
            "mountPoints": 
            [
                {
                    "sourceVolume": "mongodb-data",
                    "containerPath": "/data/db",
                    "readOnly": false
                }
            ]
        }
	  ]
}