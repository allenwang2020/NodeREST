{
	  "AWSEBDockerrunVersion": 2,
	  "volumes": [
	    {
	      "name": "nginx-proxy-conf",
	      "host": {
	      "sourcePath": "/var/app/current/nginx"
	      }
	    },           
	    {
	      "name": "web-node",
	      "host": {
	        "sourcePath": "/var/app/current/web"
	      }
	    },
	    {
	      "name": "mongo",
	      "host": {
	        "sourcePath": "/var/app/current/mongo"
	      }
		}
	  ],
	  "containerDefinitions": [
		                                                  
	    {
	      "name": "web-node",
	      "image": "node:4.4.2",
	      "essential": true,
	      "memory": 128,
	      "portMappings": [
	        {
	          "hostPort": 3000,
	          "containerPort": 3000
	        }
	      ],
	      "command": [
	        "/bin/bash",
	        "/usr/src/app/staging/web/run.sh"
	      ],
	      "links": 
	        [
	         "db-mongo"
	        ],
	      "mountPoints": [
	        {
	          "sourceVolume": "web-node",
	          "containerPath": "/usr/src/app/staging/web"
	        }
	      ]
	    },
        {
            "name": "db-mongo",
            "image": "mongo",
            "memory": 128,
            "essential": true,
            "portMappings": 
            [
                {
                    "hostPort": 27017,
                    "containerPort": 27017
                }, 
                {
                    "hostPort": 28017,
                    "containerPort": 28017
                }
            ],
            "command": [
		        "/bin/bash",
		        "/usr/src/app/staging/mongo/run.sh"
		      ],
            "mountPoints": 
            [
                {
                    "sourceVolume": "mongo",
                    "containerPath": "/data/db",
                    "readOnly": false
                }
            ]
        }
	  ]
}