{
	  "AWSEBDockerrunVersion": 2,
	  "volumes": [
		{
		    "name": "nginx-proxy",
		    "host": {
		    "sourcePath": "/var/app/current/nginx"
		    }
		  },   
	    {
	      "name": "web-node",
	      "host": {
	        "sourcePath": "/var/app/current/web"
	      }
	    },
	    {
	      "name": "build-mongo",
	      "host": {
	        "sourcePath": "/var/app/current/mongo"
	      }
		}
	  ],
	  "containerDefinitions": [
	    {
		  "name": "nginx-proxy",
		  "image": "nginx",
		  "essential": true,
		  "memory": 128,
		  "portMappings": [
		    {
		      "hostPort": 80,
		      "containerPort": 80
		    }
		  ],
		  "mountPoints": [
		    {
		      "sourceVolume": "nginx-proxy",
		      "containerPath": "/etc/nginx/conf.d",
		      "readOnly": true
		    }
		  ]
	    },                                                   
	    {
	  ]
}