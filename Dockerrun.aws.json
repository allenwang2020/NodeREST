{
	  "AWSEBDockerrunVersion": 2,
	  "volumes": [
		{
		    "name": "nginx-proxy",
		    "host": {
		    "sourcePath": "/var/app/current/nginx"
		    }
		  },   
	    {
	      "name": "web-node",
	      "host": {
	        "sourcePath": "/var/app/current/web"
	      }
	    },
	    {
	      "name": "build-mongo",
	      "host": {
	        "sourcePath": "/var/app/current/mongo"
	      }
		}
	  ],
	  "containerDefinitions": [
	    
        {
            "name": "db-mongo",
            "image": "mongo",
            "memory": 128,
            "essential": true,
            "portMappings": 
            [
                {
                    "hostPort": 27017,
                    "containerPort": 27017
                }
            ],
	  	    
            "mountPoints": 
            [
                {
                    "sourceVolume": "build-mongo",
                    "containerPath": "/data/db",
                    "readOnly": false
                }
            ]
        }
	  ]
}