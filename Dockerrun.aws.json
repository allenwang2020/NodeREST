{
	  "AWSEBDockerrunVersion": 2,
	  "volumes": [
	    {
	      "name": "nginx-proxy-conf",
	      "host": {
	      "sourcePath": "/var/app/current/nginx/conf"
	      }
	    },           
	    {
	      "name": "web-node",
	      "host": {
	        "sourcePath": "/var/app/current/web"
	      }
	    },
	    {
	      "name": "mongo",
	      "host": {
	        "sourcePath": "/var/app/current/mongo"
	      }
		},
	    {
	    
	      "name": "mongodb-data",
	      "host": {
	        "sourcePath": "/var/db/mongo/products-demo"
	      }
	    }
	  ],
	  "containerDefinitions": [
		{
		  "name": "nginx-proxy",
		  "image": "nginx",
		  "essential": true,
		  "memory": 128,
		  "portMappings": [
		    {
		      "hostPort": 80,
		      "containerPort": 80
		    }
		  ],
		  "links": [
		    "web-node"
		  ],
		  "mountPoints": [
		    {
		      "sourceVolume": "nginx-proxy-conf",
		      "containerPath": "/etc/nginx/conf.d",
		      "readOnly": true
		    }
		  ]
		},                                                  
	    {
	      "name": "web-node",
	      "image": "node:4.4.2",
	      "essential": true,
	      "memory": 128,
	      "portMappings": [
	        {
	          "hostPort": 3000,
	          "containerPort": 3000
	        }
	      ],
	      "command": [
	        "/bin/bash",
	        "/usr/src/app/staging/web/run.sh"
	      ],
	      "links": 
	        [
	         "db-mongo"
	        ],
	      "mountPoints": [
	        {
	          "sourceVolume": "web-node",
	          "containerPath": "/usr/src/app/staging/web"
	        }
	      ]
	    },
        {
            "name": "db-mongo",
            "image": "mongo",
            "memory": 128,
            "essential": true,
            "portMappings": 
            [
                {
                    "hostPort": 27017,
                    "containerPort": 27017
                }, 
                {
                    "hostPort": 27018,
                    "containerPort": 27018
                },
                {
                    "hostPort": 27019,
                    "containerPort": 27019
                }
            ],
            "command": [
		        "/bin/bash",
		        "/usr/src/app/staging/mongo/run.sh"
		      ],
            "mountPoints": 
            [
                {
                    "sourceVolume": "mongo",
                    "containerPath": "/data/db",
                    "readOnly": false
                }
            ]
        }
	  ]
}