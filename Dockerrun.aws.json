{
	  "AWSEBDockerrunVersion": 2,
	  "volumes": [
		{
		    "name": "nginx-proxy",
		    "host": {
		    "sourcePath": "/var/app/current/nginx/conf"
		    }
		  },   
	    {
	      "name": "web-node",
	      "host": {
	        "sourcePath": "/var/app/current/web"
	      }
	    },
	    {
	      "name": "persistent-mongo-db001",
	      "host": {
	        "sourcePath": "/var/db/mongo/db-001"
	      }
		}
	  ],
	  "containerDefinitions": [
	                                                       
	    {
	      "name": "web-node",
	      "image": "allenwang2020/noderest:node",
	      "essential": true,
	      "memory": 128,
	      "portMappings": [
	        {
	          "hostPort": 3000,
	          "containerPort": 3000
	        }
	      ],
	      "command": [
	        "/bin/bash",
	        "/var/app/current/web/run.sh"
	      ],
	      "links": 
	        [
	         "db-mongo",
	         "redis"
	        ],
	      "mountPoints": [
	        {
	          "sourceVolume": "web-node",
	          "containerPath": "/var/app/current/web"
	        }
	      ]
	    },
        {
            "name": "db-mongo",
            "image": "allenwang2020/noderest:mongodb",
            "environment": 
	    	  [
	            {
	              "name": "MONGODB_PASS",
	              "value": "12345"
	            }
	          ],
            "memory": 128,
            "essential": true,
            "portMappings": 
            [
                {
                    "hostPort": 27017,
                    "containerPort": 27017
                }
            ],
            "mountPoints": 
            [
                {
                    "sourceVolume": "persistent-mongo-db001",
                    "containerPath": "/var/db/mongo/db-001",
                    "readOnly": false
                }
            ]
        },
        {
        	"name": "redis",
        	"image": "allenwang2020/noderest:redis",
            "essential": true,
            "memory": 128,
            "portMappings": 
           [
            {
                "hostPort": 6378,
                "containerPort": 6378
            }
           ]
        },
        {
		  "name": "nginx-proxy",
		  "image": "nginx",
		  "essential": true,
		  "memory": 128,
		  "portMappings": [
		    {
		      "hostPort": 80,
		      "containerPort": 80
		    },
	        {
		      "hostPort": 443,
		      "containerPort": 443
		    }
		  ],
		  "links": [
		    "web-node"
		  ],
		  "mountPoints": [
		    {
		      "sourceVolume": "nginx-proxy",
		      "containerPath": "/etc/nginx/conf.d",
	          "readOnly": true
		    }
		  ],
	      "entryPoint": [
	          "nginx", "-g", "daemon off;"
	      ]
	    }
	  ]
}
